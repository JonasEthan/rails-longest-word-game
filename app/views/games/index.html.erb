<h1 class="text-center">NEW GAME</h1>
<div class="container d-flex justify-content-center">
  <%@letters.each do |letter|%>
  <div class="d-inline-flex card p-4 m-2 bg-info fw-bold text-white text-center"><%= "#{letter.upcase}"%></div>
  <%end%>
</div>
<div class="container">
  <form action="/score" class="row" data-turbo="false">
    <label for="word">Enter the longest Word you can find!</label>
    <input type="text" name="word" class="col-8 form-control">
    <input type="submit" class="btn btn-primary col-4">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :time, Time.now %>
  </form>
</div>
